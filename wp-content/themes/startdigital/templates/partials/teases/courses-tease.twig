{% set terms = juggle_taxonomies(course.ID) %}
{% set date = juggle_dates(course.ID) %}
{% set start_date = function('get_field', 'start_date', course.ID) %}

<article class="post-tease relative flex flex-col gap-8 group {{ class }}">
    <a href="{{ function('get_permalink', course.ID) }}" class="absolute inset-0 h-full w-full z-20"></a>
    <div class="image-container relative w-full h-[500px] overflow-hidden rounded-md">
        <img src="{{ get_image(course.info_image ?: course.hero_image).src }}" alt="{{ course.course_title }}" class="absolute inset-0 w-full h-full object-cover" />
    </div>
    <div class="flex flex-col gap-4">
        <div class="flex flex-row items-center gap-2">
            {% if terms[0] %}
                <a href="{{ terms[0].link }}" class="relative z-30 text-sm text-wfac-dark-red rounded-full py-1 px-2.5 bg-wfac-cream hover:bg-wfac-accent-red duration-300 ease-in-out">
                    {{ terms[0].name }}
                </a>
            {% endif %}
            {% if date %}
                <span class="text-sm text-wfac-sand font-medium">
                    <time datetime="{{ start_date }}">
                        {{ date }}
                    </time>
                </span>
            {% endif %}
        </div>
        <h3 class="is-h3 text-wfac-sand duration-300 ease-in-out group-hover:text-wfac-accent-red">
            {{ course.post_title }}
        </h3>
    </div>
</article>
